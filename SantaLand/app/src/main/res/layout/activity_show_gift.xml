<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_show_gift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.wael.alameen.santaland.ShowGiftActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bar"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorAccent"
            app:popupTheme="@style/AppTheme.PopupOverlay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/welcome_title"
                    android:textColor="@color/white"
                    android:textSize="25sp"
                    android:layout_centerHorizontal="true"/>

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/img_gift"
        android:layout_below="@+id/bar"
        android:scaleType="fitXY"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rel_two"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/img_gift">

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/facebook"
            android:src="@drawable/face1"
            android:layout_marginTop="-18dp"
            android:layout_alignParentLeft="true"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/call"
            android:src="@drawable/phone1"
            android:layout_toRightOf="@+id/facebook"
            android:layout_marginTop="-18dp"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:id="@+id/active"
            android:src="@drawable/off"
            android:layout_toLeftOf="@+id/instagram"
            />

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/instagram"
            android:src="@drawable/insta1"
            android:layout_marginTop="-18dp"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gift_name"
        android:layout_below="@+id/rel_two"
        android:textColor="@color/colorAccent"
        android:textSize="20sp"
        android:paddingRight="15dp"
        android:gravity="right"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gift_desc"
        android:layout_below="@+id/gift_name"
        android:textColor="#000000"
        android:textSize="18sp"
        android:padding="10dp"
        android:gravity="right"/>

</RelativeLayout>

</ScrollView>