<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/first_hint"
            android:gravity="center"
            android:text="@string/designed_and_developed_by"
            android:textSize="20sp"
            android:layout_marginTop="30dp"
            android:textColor="@color/colorPrimary"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/logo"
            android:layout_below="@+id/first_hint"
            android:layout_centerHorizontal="true"
            android:src="@drawable/logo_5tech"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/second_hint"
            android:text="@string/santa_land_version_1_1"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="@color/colorPrimary"
            android:layout_below="@+id/logo"/>

    </RelativeLayout>


</LinearLayout>